  </div>
  {{with .}}
  <div class="card-container" >
    {{range .}}
      <article class="card">
          <img src="{{.Flags.Png}}" alt="{{.Flags.Alt}}">
          <header>
           <a href="/country/{{.Ccn3}}"> <h2>{{.Name.Common}}</h2></a>
          </header>    
          <div class="content">
            <div>
              <span class="property">Population</span>:
              <span class="population">{{.Population}}</span>
            </div>
            <div>
              <span class="property">Region</span>:
              <span>{{.Region}}</span>
            </div>
            <div>
              <span class="property">Capital</span>:
              {{with .Capital}}
              <span>{{index . 0}}</span>
              {{else}}
              <span>-</span>
              {{end}}
            </div>
          </div>
      </article>
    {{end}}
    </div>

    <h4 class="align-center text-center" style="margin-top:var(--size-4)"><a href="/countries/0/page">Explore More...</a></h4>
